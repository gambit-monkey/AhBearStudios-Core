{
  "permissions": {
    "allow": [
      "Bash(do echo \"Processing $file\")",
      "Bash(for:*)",
      "Bash(do echo \"Fixing TypeCode in $file...\")",
      "Bash(do echo \"Adding import to $file...\")",
      "Bash(if ! grep -q \"AhBearStudios.Core.Common.Utilities\" \"$file\")",
      "Bash(then sed -i '2 a using AhBearStudios.Core.Common.Utilities;' \"$file\")",
      "Bash(find:*)",
      "WebFetch(domain:fish-networking.gitbook.io)",
      "WebFetch(domain:docs.google.com)",
      "Bash(sed:*)",
      "Bash(grep:*)",
      "Read(//usr/bin/**)",
      "Bash(apt list:*)",
      "Bash(dotnet build:*)",
      "Bash(csc:*)"
    ],
    "deny": [],
    "ask": []
  },
  "enableAllProjectMcpServers": false,
  "projectContext": {
    "type": "unity-game",
    "primaryLanguage": "csharp",
    "targetFramework": "netstandard2.1",
    "unityVersion": "2022.3 LTS",
    "frameworks": [
      "unity",
      "reflex-di",
      "unitask",
      "zlinq",
      "memorypack"
    ],
    "packageManager": "npm-global"
  },
  "codeGeneration": {
    "preferredPatterns": [
      "builder-config-factory-service",
      "functional-organization",
      "dependency-injection",
      "unity-component-system"
    ],
    "avoidPatterns": [
      "enterprise-patterns",
      "over-abstraction",
      "separate-interface-namespaces",
      "heavy-orms",
      "complex-event-buses"
    ]
  },
  "performance": {
    "targetFPS": 60,
    "frameBudgetMs": 16.67,
    "mobileOptimization": true,
    "prioritizePerformance": true
  },
  "fileExclusions": {
    "searchExclude": [
      "*.meta",
      "*.asset",
      "*.prefab",
      "*.unity",
      "*.mat",
      "*.anim",
      "*.controller",
      "Library/**",
      "Temp/**",
      "Logs/**",
      "obj/**",
      "Build/**",
      "Builds/**",
      ".vs/**",
      "*.csproj.user"
    ]
  }
}